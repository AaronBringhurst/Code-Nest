<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Your Dashboard</h1>
    {{#if posts.lenght}}
        <div class="mb-8">
            <h2 class="text-2xl font-semibold mb-4">Your Blog Posts</h2>
            {{#each posts}}
                <div class="bg-white shadow-md rounded-lg p-6 mb-4" data-post-id="{{id}}">
                    <h3 class="text-xl font-bold mb-2">{{title}}</h3>
                    <p class="text-gray-600 mb-4">{{truncate body 150}}</p>
                    <div class="flex space-x-4">
                        <button class="edit-post-btn px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Edit</button>
                        <button class="delete-post-btn px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
                    </div>
                </div>
                {{/each}}
        </div>
        {{else}}
        <p class="text-lg text-gray-600 mb-8">You haven't created any blog posts yet.</p>
        {{/if}}
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Create a New Blog Post</h2>
        <form id="new-post-form" class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-4">
                <label for="post-title" class="block text-gray-700 text-sm font-bold mb-2">Title:</label>
                <input type="text" id="post-title" name="title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-6">
                <label for="post-content" class="block text-gray-700 text-sm font-bold mb-2">Content:</label>
                <textarea id="post-content" name="content" rows="6" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create Post
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Post Modal -->
<div id="edit-post-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="display: none;">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
        <h3 class="text-2xl font-bold mb-4">Edit Blog Post</h3>
        <form id="edit-post-form">
            <input type="hidden" id="edit-post-id">
            <div class="mb-4">
                <label for="edit-post-title" class="block text-gray-700 text-sm font-bold mb-2">Title:</label>
                <input type="text" id="edit-post-title" name="title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-6">
                <label for="edit-post-content" class="block text-gray-700 text-sm font-bold mb-2">Content:</label>
                <textarea id="edit-post-content" name="content" rows="6" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Update Post
                </button>
                <button type="button" id="close-edit-modal" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/dashboard.js"></script>