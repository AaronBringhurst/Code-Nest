<div id="postModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="display: none;">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-2/3 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 id="modalTitle" class="text-2xl leading-6 font-bold text-gray-900 mb-2"></h3>
            <p id="modalBody" class="text-base text-gray-700 mb-4"></p>
            <div class="text-sm text-gray-600 mb-4">
                <p>Posted by: <span id="modalUsername"></span></p>
                <p>Date: <span id="modalDate"></span></p>
            </div>
            
            <div class="border-t pt-4">
                <h4 class="text-lg font-semibold mb-2">Comments</h4>
                <div id="commentsList" class="space-y-2">
                </div>
            </div>
            
            <form id="commentForm" class="mt-4">
                <textarea id="commentInput" class="w-full p-2 border rounded" rows="3" placeholder="Add a comment..."></textarea>
                <button type="submit" class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Add Comment</button>
            </form>
            
            <div class="mt-4">
                <button id="closeModal" class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>